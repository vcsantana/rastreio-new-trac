FROM node:20-alpine

WORKDIR /app

# Copy package files
COPY package*.json ./

# Clean npm cache and install dependencies
RUN npm cache clean --force && \
    npm install --legacy-peer-deps

# Copy source code
COPY . .

# Copy environment file
COPY env.development .env.development

# Expose port
EXPOSE 3000

# Command will be overridden in docker-compose
CMD ["npx", "vite", "--host"]
